<?xml version="1.0" encoding="UTF-8"?>
<d:BasePage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:d="clr-namespace:Panor.Pages;"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Panor.Pages.Test"
    Title="ПАНОРАМА"
    NavigationPage.BarBackgroundColor="Green"
    >
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Корзина" Icon="ic_shopping_cart" />
    </ContentPage.ToolbarItems>
	<ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <BoxView HeightRequest="500" BackgroundColor="Aqua" />
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal">
                        <BoxView WidthRequest="250" BackgroundColor="Fuchsia" />
                        <BoxView WidthRequest="250" BackgroundColor="Olive" />
                    </StackLayout>
                </ScrollView>
                <BoxView HeightRequest="500" BackgroundColor="Maroon" />
            </StackLayout>
        </ScrollView>
	</ContentPage.Content>
</d:BasePage>
